{



//  // Use Vim hjkl to nevigate folders
//      "workbench.list.keyboardNavigation": "simple",
//     

"workbench.list.automatickeyboardNavigation": true,

"vim.useSystemClipboard": true,  // Uses SystemClipboard

  "vim.insertModeKeyBindings": 
  [
    {
        "before": ["a", "s", "d"],
        "after": ["<Esc>"]
    }
  ],


"vim.visualModeKeyBindingsNonRecursive": [
  {
    "before": ["p"],
    "commands": ["editor.action.clipboardPasteAction"]
  }
],
"terminal.integrated.inheritEnv": false,
"editor.cursorBlinking": "expand",
"emmet.includeLanguages": {
  "javascript": ""
},



"javascript.updateImportsOnFileMove.enabled": "always",
"editor.wordWrap": "on",
"workbench.colorCustomizations": {
  "editorLineNumber.foreground": "#00ff00"
},
"workbench.editor.titleScrollbarSizing": "large" //Title Scrollbar Sizing

}



